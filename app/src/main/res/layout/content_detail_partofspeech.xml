<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPartOfSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/partofspeech_margin_left"
        android:layout_marginStart="@dimen/partofspeech_margin_left"
        android:layout_marginTop="@dimen/partofspeech_margin_top"
        android:textColor="#60000000"
        tools:text="noun"/>

    <LinearLayout
        android:id="@+id/vContentDetailPartOfSpeechData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/partofspeech_divider_margin_top"
        android:background="#12000000"/>
</LinearLayout>